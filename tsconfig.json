{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "build",
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "outDir": "build",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "erasableSyntaxOnly": true,
    "types": ["@types/bun"]
  },
  "include": ["src/**/*", "src/**/*.tsx"],
  "exclude": ["dist", "node_modules", "test"]
}
