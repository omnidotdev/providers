{
  "name": "@omnidotdev/providers",
  "version": "0.1.0",
  "description": "Shared auth, authorization, and billing providers for the Omni ecosystem",
  "license": "MIT",
  "type": "module",
  "main": "./build/index.js",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "types": "./build/index.d.ts"
    },
    "./graphql": {
      "import": "./build/graphql/index.js",
      "types": "./build/graphql/index.d.ts"
    },
    "./react": {
      "import": "./build/react/index.js",
      "types": "./build/react/index.d.ts"
    }
  },
  "files": [
    "build"
  ],
  "scripts": {
    "dev": "bun run build --watch",
    "build": "bun run build:core && bun run build:graphql && bun run build:react && tsc --emitDeclarationOnly",
    "build:core": "bun build ./src/index.ts --outdir ./build --format esm --target node",
    "build:graphql": "bun build ./src/graphql/index.ts --outdir ./build/graphql --format esm --target node --external '*'",
    "build:react": "bun build ./src/react/index.ts --outdir ./build/react --format esm --target browser --external '*'",
    "typecheck": "tsc --noEmit",
    "lint": "biome check",
    "format": "biome format --write",
    "knip": "knip-bun",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "jose": "^6.1.3"
  },
  "peerDependencies": {
    "@envelop/types": ">=5.0.0",
    "@escape.tech/graphql-armor": ">=3.0.0",
    "@tanstack/query-core": ">=5.0.0",
    "graphile-export": ">=1.0.0-rc.0",
    "postgraphile": ">=5.0.0-rc.0",
    "react": ">=19.0.0"
  },
  "peerDependenciesMeta": {
    "@envelop/types": {
      "optional": true
    },
    "@escape.tech/graphql-armor": {
      "optional": true
    },
    "@tanstack/query-core": {
      "optional": true
    },
    "graphile-export": {
      "optional": true
    },
    "postgraphile": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@envelop/types": "^5.0.0",
    "@escape.tech/graphql-armor": "^3.2.0",
    "@tanstack/query-core": "^5.75.5",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.6",
    "@types/react": "^19.1.6",
    "graphile-export": "^1.0.0-rc.0",
    "happy-dom": "^20.5.0",
    "knip": "^5.82.1",
    "postgraphile": "^5.0.0-rc.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3"
  }
}
